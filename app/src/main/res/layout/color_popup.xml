                    android:layout_gravity="center"
                    app:tint="@color/black" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/frame_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <View
                    android:layout_width="33sp"
